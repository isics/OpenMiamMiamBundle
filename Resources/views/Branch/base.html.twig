{% extends 'IsicsOpenMiamMiamBundle::base.html.twig' %}

{% block body_attributes ' class="page-branch"' %}
{% block title %}{{ 'branch.homepage.title'|trans({'%branch_name%': branch.name}, 'seo') }}{% endblock %}
{% block meta_description %}{{ 'branch.homepage.meta_description'|trans({'%branch_name%': branch.name}, 'seo') }}{% endblock %}
{% block header %}
    {% if homepage is not defined %}
        {% set homepage=false %}
    {% endif %}
    <header class="navbar navbar-static-top">
        <div class="container header-container">
            <div class="row">
                <div id="header-logo">
                    <a href="{{ path('open_miam_miam.branch.homepage', {'branchSlug': branch.slug }) }}" class="desktop-only">{% include 'IsicsOpenMiamMiamBundle::baseLogo.html.twig' %}</a>
                    <a href="{{ path('open_miam_miam.branch.homepage', {'branchSlug': branch.slug }) }}" class="phone-only">{% include 'IsicsOpenMiamMiamBundle::baseLogoMini.html.twig' %}</a>
                </div>
                {% include 'IsicsOpenMiamMiamBundle::headerNav.html.twig' %}
                <button type="button" class="navbar-toggle" data-target="#slideout">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {{ render(controller('IsicsOpenMiamMiamBundle:Cart:Summarize', {'branch': branch, 'homepage': homepage})) }}
            </div>
        </div>
    </header>
{% endblock %}

{% block global_content %}

    <div class="row">
        <div class="col-md-3" role="navigation" id="slideout">
            <div class="slideout-overlay">
            </div>
            <div class="slideout-content">

                {{ render(controller('IsicsOpenMiamMiamBundle:Catalog:ShowCategories', {'branch': branch})) }}

                <div class="producers-show-attendance-container">
                    <a href="{{ path('open_miam_miam.branch.producers.attendance', { 'branchSlug': branch.slug }) }}"
                       class="btn btn-success">
                        <span class="glyphicon glyphicon-calendar"></span>
                        {{ 'zone.next_occurrences.footer'|trans }}
                    </a>
                </div>
                <div class="hidden-phone">
                    {{ render(controller('IsicsOpenMiamMiamBundle:Branch:ShowRandomProducers', {'branch': branch, limit: 5})) }}
                    {{ render(controller('IsicsOpenMiamMiamBundle:Branch:ShowNextOccurrences', {'branch': branch, limit: 3})) }}
                    {% include 'IsicsOpenMiamMiamBundle:Branch:location.html.twig' with {'branch': branch} %}
                </div>
            </div>
        </div>
        <div class="col-md-9" role="main">
            {% include 'IsicsOpenMiamMiamBundle::messages.html.twig' %}
            {% block content %}{% endblock %}
        </div>
    </div>
{% endblock %}

{% block footer %}
    <footer>
        <hr />
        <div class="container">
            {% include 'IsicsOpenMiamMiamBundle:Branch:footerNav.html.twig' %}
            {% include 'IsicsOpenMiamMiamBundle::copyright.html.twig' %}
        </div>
    </footer>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key={{ google_map_api_key }}"></script>
    <script type="text/javascript">
        $(function() {
            new OpenMiamMiam.LocationMap(
                '{{ branch.name }}',
                '{{ 'zone.location.route_link'|trans }}',
                '{{ branch.address1 }}',
                '{{ branch.address2 }}',
                '{{ branch.zipcode }}',
                '{{ branch.city }}',
                'FRANCE' {#todo add openmiammiam.country param#}
            );
        });
    </script>
{% endblock %}
