{% extends 'IsicsOpenMiamMiamBundle:Admin:admin.html.twig' %}

{% block content %}
    {% set product = form.vars.data %}
    <h1>{{ 'admin.producer.products.form.edit_title'|trans({'%name%': product.name, '%ref%': product.ref}) }}</h1>

    {% if insights |length >= 1 %}
    <div class="alert alert-warning row" role="alert">
        <div class="col-md-6">
            {% for insight in insights %}
                {% if insight.getCode() == 4 %}
                    <span class="glyphicon glyphicon-info-sign" style="color: #FFA500;"></span> {{ 'admin.producer.products.edit.bad_description' |trans }}<br><br>
                 {% elseif insight.getCode() == 3 %}
                    <span class="glyphicon glyphicon-info-sign" style="color: #FFA500;"></span> {{ 'admin.producer.products.edit.bad_image' |trans }}<br><br>
                 {% endif %}
            {% endfor %}
        {% if completeness < 10 %}
            <p><a data-toggle="collapse" href="#footwear" aria-expanded="false" aria-controls="footwear">{{ 'admin.producer.products.edit.empty_elements' |trans }} ({{ 10 - completeness }})</a></p>
            <div class="collapse" id="footwear">
              <ul>
                {% for insight in insights %}
                     {% if insight.code == 1 %}
                         <li>{{ 'admin.producer.products.edit.empty_description' |trans }}</li>
                      {% elseif insight.code == 2 %}
                         <li>{{ 'admin.producer.products.edit.empty_image' |trans }}</li>
                      {% endif %}
                {% endfor %}
              </ul>
            </div>
        {% endif %}
        </div>
        {% if completeness < 10 %}
        <div class="col-md-6">
            <p style="text-align: center">Indice de compl√©tion : </p>

            <div class="progress" style="width: 50%; margin-left: 25%">
                <div class="progress-bar {% if completeness == 10  %} progress-bar-success {% else %} progress-bar-warning {% endif %} progress-bar-striped" role="progressbar" style="width: {{ completeness * 10}}%;" aria-valuenow="{{ completeness * 10 }}" aria-valuemin="0" aria-valuemax="100">{{ completeness * 10 }}%</div><br>
            </div>
        </div>
        {% endif %}
    </div>
    {% endif %}
    {% include 'IsicsOpenMiamMiamBundle:Admin:Producer\\Product\\form.html.twig' with {'form': form} %}
    {% include 'IsicsOpenMiamMiamBundle:Admin:Producer\\Product\\deleteDialog.html.twig' %}

    {% include 'IsicsOpenMiamMiamBundle:Admin:activityStream.html.twig' %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
        $(function() {
            new OpenMiamMiam.PanelForm;
            new OpenMiamMiam.ProducerProductForm;
            new OpenMiamMiam.DeleteDialog;
        });
    </script>
    {{ tinymce_init() }}
{% endblock %}
