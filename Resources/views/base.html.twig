<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{{ 'default.title'|trans({}, 'seo') }}{% endblock %}</title>
        <meta name="description" content="{% block meta_description %}{{ 'default.meta_description'|trans({}, 'seo') }}{% endblock %}">
        <meta name="keywords" content="{% block meta_keywords %}{{ 'default.meta_keywords'|trans({}, 'seo') }}"{% endblock %}>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta charset="UTF-8" />
        {% block stylesheet %}
            {% include 'IsicsOpenMiamMiamBundle::baseStylesheets.html.twig' %}
        {% endblock %}
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
            {% javascripts
                'js/html5shiv.js'
                'js/respond.min.js'
                filter='?uglifyjs2'
                output='cache/js/*.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        <![endif]-->
        <link rel="icon" type="image/png" href="/favicon.png" />
        <!--[if IE]><link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" /><![endif]-->
    </head>
    <body{% block body_attributes %}{% endblock %}>

        {% block header %}
            <header class="navbar navbar-static-top">
                <div class="container header-container">
                    <div class="row">
                        <div id="header-logo">
                            <a href="{{ path('open_miam_miam.homepage') }}">{% include 'IsicsOpenMiamMiamBundle::baseLogo.html.twig' %}</a>
                        </div>  
                    </div>
                </div>
            </header>
        {% endblock %}
        <div class="container content-wrapper">
            {% block global_content %}
                {% include 'IsicsOpenMiamMiamBundle::messages.html.twig' %}
                {% block content %}{% endblock %}
            {% endblock %}
        </div>

        {% block footer %}
            <footer>
                <hr />
                <div class="container footer-container">
                    {% include 'IsicsOpenMiamMiamBundle::copyright.html.twig' %}
                </div>
            </footer>
        {% endblock %}

        {% block javascript %}
            {% include 'IsicsOpenMiamMiamBundle::baseJavascripts.html.twig' %}
        {% endblock %}
    </body>
</html>
